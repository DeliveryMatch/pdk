{
    "name": "deliverymatch/pdk",
    "type": "library",
    "scripts": {
        "phpcs:fix": "php-cs-fixer fix",
        "analyse": "phpstan analyse -c phpstan.neon --memory-limit 2G"
    },
    "autoload": {
        "psr-4": {
            "DeliveryMatch\\Pdk\\": "src/"
        }
    },
    "require": {
        "php-di/php-di": "^7.0",
        "php": ">=8.1",
        "deliverymatch/sdk": "^1.0",
        "psr/log": "^1.0.0 || ^2.0.0 || ^3.0.0",
        "nyholm/psr7": "^1.8"
    },
    "require-dev": {
        "phpro/grumphp": "^2.10",
        "squizlabs/php_codesniffer": "^3.11",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.67",
        "ergebnis/phpstan-rules": "^2.6"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true,
            "php-http/discovery": true
        }
    }
}
